<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListAvailableBooksActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/availabeBooks_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="List Available Books Page"
        app:titleTextColor="#FFC107" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Enter the start year of the date range:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/d_first_edit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:ems="2"
            android:hint="DD"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/m_first_edit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:ems="2"
            android:hint="MM"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/y_first_edit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:ems="4"
            android:hint="YY"
            android:inputType="number"
            android:maxLength="4"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Enter the end year of the date range:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/L2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/d_end_edit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:ems="2"
            android:hint="DD"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/m_end_edit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:ems="2"
            android:hint="MM"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="/"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/y_end_edit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:ems="4"
            android:hint="YY"
            android:inputType="number"
            android:maxLength="4"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="#FFC107"
            android:textSize="16sp"
            android:textStyle="normal"
            app:icon="@android:drawable/ic_search_category_default" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp" >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="_ _ _"
                android:textAlignment="center"
                android:textColor="#FF0000" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>