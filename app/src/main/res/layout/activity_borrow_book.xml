<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BorrowBookActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/borrowBook_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Borrow Book Page "
        app:titleTextColor="#FFC107" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="Please Enter The Following Data:"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Borrower ID :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/borrower_Id"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:ems="2"
            android:hint="ID"
            android:inputType="number"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Book ID :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/book_Id"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:ems="2"
            android:hint="ID"
            android:inputType="number"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Due Date :"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/L1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/d_Due_edit"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:ems="2"
                android:hint="DD"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="/"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/m_Due_edit"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:ems="2"
                android:hint="MM"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="/"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/y_Due_edit"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:ems="4"
                android:hint="YY"
                android:inputType="number"
                android:maxLength="4"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Confirm" />
    </LinearLayout>

</LinearLayout>